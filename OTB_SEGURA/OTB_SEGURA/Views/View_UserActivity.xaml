<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OTB_SEGURA.ViewModels"
             x:Class="OTB_SEGURA.Views.View_UserActivity">
    <ContentPage.BindingContext>
        <vm:UserActivityViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding ListActivity}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BorderColor="Red" CornerRadius="2" Padding="4" Margin="6">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Mensaje: " TextColor="Black"></Label>
                                    <Label Text="{Binding Message,Mode=TwoWay}" TextColor="Black"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Tipo: " TextColor="Black"/>
                                    <Label Text="{Binding Type,Mode=TwoWay}" TextColor="Black"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>