<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OTB_SEGURA.Views.View_UsersList"
             xmlns:vm="clr-namespace:OTB_SEGURA.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:UsersListViewModel />
        <!-- establecemos el contexto de los datos -->
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding UserList}" HasUnevenRows="true" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BorderColor="Black" CornerRadius="5" Margin="5" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Nombre:" FontAttributes="Bold" TextColor="Black" />
                                        <Label Text="{Binding Name}" TextColor="Black" />
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Telefono:" FontAttributes="Bold" TextColor="Black"  />
                                        <Label Text="{Binding Phone}" TextColor="Black" />
                                    </StackLayout>
                                    <Button Text="Habilitar/Deshabilitar" TextColor="Black" />
                                </StackLayout>
                                <Grid Grid.Column="1">
                                    <Image Background="gray" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="0" 
                Text="+" BorderColor="#2b3c3c" 
                BorderWidth="1" FontAttributes="Bold" 
                BackgroundColor="{StaticResource colorYellow}"
                BorderRadius="35" TextColor="{StaticResource colorDark}" 
                HorizontalOptions="End" WidthRequest="80" 
                HeightRequest="70" Margin="0,0,20,22" VerticalOptions="End"
                Clicked="Button_Clicked"/>

    </Grid>
</ContentPage>